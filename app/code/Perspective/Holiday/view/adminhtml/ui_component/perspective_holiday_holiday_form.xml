<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">perspective_holiday_holiday_form.holiday_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Perspective\Holiday\Block\Adminhtml\Holiday\Edit\SaveButton"/>
            <button name="delete" class="Perspective\Holiday\Block\Adminhtml\Holiday\Edit\DeleteButton"/>
            <button name="back" class="Perspective\Holiday\Block\Adminhtml\Holiday\Edit\BackButton"/>
        </buttons>
        <namespace>perspective_holiday_holiday_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>perspective_holiday_holiday_form.holiday_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="holiday_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="perspective_holiday/holiday/save"/>
        </settings>
        <dataProvider class="Perspective\Holiday\Model\Holiday\DataProvider" name="holiday_form_data_source">
            <settings>
                <requestFieldName>holiday_id</requestFieldName>
                <primaryFieldName>holiday_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="holiday_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">holiday</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>holiday_id</dataScope>
            </settings>
        </field>
        <field name="name" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">holiday</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Name</label>
                <visible>true</visible>
                <dataScope>name</dataScope>
            </settings>
        </field>
        <field name="text" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">holiday</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Greeting</label>
                <visible>true</visible>
                <dataScope>text</dataScope>
            </settings>
        </field>
        <field name="status" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">holiday</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Holiday</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">2</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="storeviews" formElement="multiselect" class="Magento\Store\Ui\Component\Form\Field\StoreView">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">holiday</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <tooltip>
                    <link>https://docs.magento.com/m2/ce/user_guide/configuration/scope.html</link>
                    <description>What is this?</description>
                </tooltip>
                <label translate="true">Store View</label>
                <dataScope>store_id</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Magento\Cms\Ui\Component\Listing\Column\Cms\Options"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="start" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">holiday</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Start Holiday</label>
                <visible>true</visible>
                <dataScope>start</dataScope>
            </settings>
        </field>
        <field name="day" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">holiday</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Currect Day Holiday</label>
                <visible>true</visible>
                <dataScope>day</dataScope>
            </settings>
        </field>
        <field name="finish" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">holiday</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">End Holiday</label>
                <visible>true</visible>
                <dataScope>finish</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
