<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="perspective_schema_sc_table">
        <column xsi:type="int" name="id" padding="10" identity="true" unsigned="true" nullable="false" comment="id"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Job"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
        <column xsi:type="text" name="content" nullable="false" comment="Summary"/>
        <column xsi:type="timestamp" name="created_at" comment="Time"/>
        <column xsi:type="timestamp" name="updated_at" comment="Time"/>
        <column xsi:type="boolean" name="status" nullable="true" comment="..."/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
